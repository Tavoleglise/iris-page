---
import { Image } from "@nextui-org/react";
import { infoHomeCards } from "../../utilities";

interface Card {
  description: string;
  image: string;
}
---

<div class="flex flex-col xl:flex-row justify-around items-center">
  {
    infoHomeCards.map((card: Card) => (
      <div class="flex flex-col justify-start items-center w-full bg-zinc-600 p-8 rounded-xl my-4 shadow-2xl xl:w-1/3 xl:mx-4 h-96">
        <div class="h-32 flex items-center overflow-hidden rounded-xl">
          <Image src={card.image} alt="iso logo" client:visible />
        </div>
        <span class="my-4 text-2xl text-center">{card.description}</span>
      </div>
    ))
  }
</div>
